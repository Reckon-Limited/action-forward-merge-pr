{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "schema.public.graphql",
        "tag": "gql"
      }
    ]
  },
  "exclude": ["node_modules", "__tests__"]
}
